<h2>Incomes</h2>
<!-- dropdown -->
<div id="dropdowns">
  <div id="income_month_year_dropdown">
    <form action="/income" method="POST" name="income_dropdown_form">
      <label for="income_month_and_year">Pick the month to display:</label>
      <!-- use getMonthYearForFormMax() helper function for partial_date -->
      <input
        type="month"
        min="2000-01"
        max="{{partial_date}}"
        id="income_month_and_year"
        name="income_month_and_year"
      />
      <input type="submit" value="Submit" />
    </form>
  </div>
</div>

<div id="income_table">
  <table>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th>Description</th>
    </tr>
    {{#each income_objects}}
      <tr>
        <td>${{amount}}</td>
        <td>{{date}}</td>
        <td>{{description}}</td>
      </tr>
    {{/each}}
  </table>
</div>

<!-- new income form  -->
<div id="new_income">
  <h3>Insert a new income:</h3>
  <form
    action="/income"
    method="POST"
    name="new_income_form"
    id="new_income_form"
  >
    <label for="new_income_amount">Amount</label>
    <input
      type="number"
      step=".01"
      name="new_income_amount"
      id="new_income_amount"
    />
    <label for="new_income_date">Date</label>
    <!-- use getFullDateForFormMax() helper function -->
    <input type="date" min="2000-01-01" max="{{full_date}}" />
    <label for="new_income-description">Description</label>
    <input
      type="text"
      name="new_income-description"
      id="new_income-description"
    />
    <input type="submit" value="Submit" />
  </form>
</div>